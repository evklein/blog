---
import BaseLayout from "../layouts/BaseLayout.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
const pageTitle = "Blog";
---

<BaseLayout pageTitle={pageTitle}>
    <h1>Posts</h1>
    <p class="small">
        Various thoughts and musings on projects, engineering, and life.
    </p>
    <h2>2024</h2>
    <div>
        {
            allPosts
                .sort(
                    (a, b) => Number(new Date(b.frontmatter.pubDate)) - Number(new Date(a.frontmatter.pubDate))
                )
                .map((post) => (
                    <div class="post">
                        <h3>
                            <a href={post.url}>{post.frontmatter.title}</a>
                            <div class="right-info">
                                <p class="date">
                                    {
                                        new Date(post.frontmatter.pubDate).toLocaleDateString(
                                            "en-us",
                                            {
                                                month: "short",
                                                day: "numeric",
                                                }
                                        )
                                    }
                                </p>
                                <a href="/evicons" title="What is this smudge?">
                                    <canvas
                                        class="evicon"
                                        id={post.frontmatter.title}
                                        width="25"
                                        height="25"
                                    />
                                </a>
                            </div>
                        </h3>
                    </div>
                ))
        }
    </div>
</BaseLayout>
<script type="module" src="../src/scripts/evicons-loader.js"></script>
<style>
    h1 {
        font-size: 3rem;
    }
    h2 {
        font-size: 2.3rem;
        margin-bottom: 0;
    }
    p .small {
        font-size: 12pt;
    }
    .post {
        display: inline-block;
        width: 90%;
        border-bottom: 1px solid hwb(165 26% 25%);
        display: flex;
    }
    .post:last-child {
        border-bottom: none;
    }
    h3 {
        display: inline-block;
        width: 100%;
    }
    .right-info {
        float: right;
        display: flex;
    }
    .date {
        margin: 0;
        font-weight: lighter;
        font-family: "Courier New", Courier, monospace;
    }
    a {
        text-decoration: none;
        color: black;
        display: inline-block;
    }
    a:hover {
        text-decoration: underline;
    }

    canvas {
        margin-left: 10px;
        margin-top: -3px;
        border: 1px solid #aaa;
        border-radius: 5px;
    }

    @media (max-width: 768px) {
        .post {
            min-height: 55px;
            width: 100%;
        }

        .post > h3 > a {
            width: 60%;
        }
    }
</style>
